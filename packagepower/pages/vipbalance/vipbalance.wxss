/* packagepower/pages/vipbalance/vipbalance.wxss */

.h-header-box {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 360rpx;
  background-size: 100% 100%; 
}

.h-header-text {
  line-height: 28rpx;
  font-size: 28rpx;
  color: rgba(151,116,25,1);
  overflow: hidden;
}

.h-header-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 142rpx;
  height: 50rpx;
  border: 1rpx solid #977419;
  /* background-color: #fff; */
  /* box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(151, 116, 25, 0.24); */
  border-radius: 32rpx;
  margin-top: 1rpx;
  color: #977419;
  font-size: 28rpx;
}

.h-header-num {
  margin: 20rpx 0 28rpx 0;
  line-height: 66rpx;
  font-size: 72rpx;
  color: #977419;
  font-weight: bold;
  
}
.h-header-num1{
  font-size: 48rpx;
}

.h-bottom-box {
  padding: 0 24rpx;
  background-color: #fff;
}

.h-bar-box {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  width: 100%;
  height: 96rpx;
  text-align: center;
  overflow: hidden;
}

.h-bar-box-one1 {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-self: center;
  color: #c5c5c5;
  font-size: 28rpx;
  width: 33.33333333%;
  height: 100rpx;
}

.h-bar-box-one2 {
  color: #333;
  font-weight: bold;
}

.h-bar-box-fill1 {
  margin: 0 auto;
  padding-top: 4rpx;
  width: 48rpx;
  height: 4rpx;
  background-color: #fff;
  border-radius: 3rpx;
}

.h-bar-box-fill2 {
  background: linear-gradient(137.4deg, rgba(255, 101, 57, 1), rgba(255, 51, 51, 1));
}

.h-balanslist {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.h-balanslist-text {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.h-balanslist-num {
  font-size: 24rpx;
  color: #ff5a5a;
}

.h-balanslist-num1 {
  font-size: 24rpx;
  color: #00c957;
}

.h-balanslist-date {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #808080;
}

.h-elsebox {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin-top: 96rpx;
  width: 100%;
}

.else-img {
  width: 222rpx;
  height: 140rpx;
  overflow: hidden;
}

.else-text {
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #808080;
}

